+    /* Handle clipboard events in a dedicated thread, if needed. */
+    if (!WAYLANDDRV_UNIX_CALL(init_clipboard, NULL))
+        CloseHandle(CreateThread(NULL, 0, clipboard_thread, NULL, 0, &tid));
 
     return TRUE;
 }
